---
import MainHeader from "../components/MainHeader.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
const pathname = Astro.url.pathname;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Farmacias farmaplus en Etruria La Laguna y Pasco.
  Amplio stock de medicamentos, perfumería, ortopedia, dietética, pañales, accesorios para la belleza y el cuidado de tu salud."
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="icon"
      href="/assets/TiendaFarmaplus_isologotipo_color.png"
      type="image/x-icon"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="montserrat">
    <div class="bg-green-600 text-white">
      <p class="text-center text-sm">
        <a href="#" class="inline-block"
          >Hasta 35% de descuento pidiendo desde la página</a
        >
      </p>
    </div>
    <MainHeader />
    <slot />

    <footer
      class={`${pathname === "/salud" || pathname === "/sucursales" ? "" : "mt-10"} bg-light`}
    >
      <hr />

      <div class="mx-auto max-w-screen-xl px-4 pb-6 pt-8 sm:px-6 lg:px-8">
        <div class="lg:flex lg:items-center lg:justify-between">
          <div class="flex justify-center text-teal-600 sm:justify-start">
            <img
              class="size-24"
              src="/assets/TiendaFarmaplus_isologotipo_color.png"
              alt="logotipo-farmaplus"
            />
          </div>

          <p
            class="mt-4 max-w-md text-left leading-relaxed text-gray-500 sm:text-left lg:mt-0"
          >
            En Farmaplus garantizamos el mejor espacio de salud y bienestar para
            vos y tu familia.
          </p>
        </div>

        <div
          class="mt-16 grid grid-cols-1 gap-8 border-t border-gray-100 pt-16 md:grid-cols-4 lg:grid-cols-4"
        >
          <div class="sm:text-left">
            <p class="text-lg font-medium text-gray-900">MENU</p>

            <ul class="mt-8 space-y-4 text-sm">
              <li>
                <a
                  class="text-gray-700 transition hover:text-gray-700/75"
                  href="/"
                >
                  Inicio
                </a>
              </li>

              <li>
                <a
                  class="text-gray-700 transition hover:text-gray-700/75"
                  href="/productos">Productos</a
                >
              </li>

              <li>
                <a
                  class="text-gray-700 transition hover:text-gray-700/75"
                  href="/salud"
                >
                  Salud
                </a>
              </li>

              <li>
                <a
                  class="text-gray-700 transition hover:text-gray-700/75"
                  href="/convenios">Convenios</a
                >
              </li>
              <li>
                <a
                  class="text-gray-700 transition hover:text-gray-700/75"
                  href="/sucursales">Sucursales</a
                >
              </li>
            </ul>
          </div>

          <div class="sm:text-left">
            <p class="text-lg font-medium text-gray-900">CONTACTO</p>

            <ul class="mt-8 space-y-4 text-sm">
              <li>
                <a
                  class="text-gray-700 transition hover:text-gray-700/75 underline"
                  href="#"
                >
                  Telefonos
                </a>

                <ul>
                  <li class="truncate">+54 9 3534 17-5111 (Etruria)</li>
                  <li class="truncate">+54 9 3521 45-3975 (Laguna)</li>
                  <li class="truncate">+54 9 3534 76-8658 (Pasco)</li>
                </ul>
              </li>

              <li>
                <a
                  class="text-gray-700 transition hover:text-gray-700/75"
                  href="#"
                >
                  Email
                </a>

                <ul>
                  <li>farmaplus@hotmail.com.ar</li>
                </ul>
              </li>
            </ul>
          </div>

          <span></span>
          <span></span>

          <div
            class="mt-16 row-start-2 justify-between w-full col-span-full border-t border-gray-100 pt-6 sm:flex sm:items-center sm:justify-between"
          >
            <p class="text-center text-sm text-gray-500 sm:text-left">
              © 2024 | Diseñado y Desarrollado por Bautista Thomann
            </p>

            <ul class="mt-4 flex justify-center gap-6 sm:mt-0 sm:justify-start">
              <li>
                <a
                  href="#"
                  rel="noreferrer"
                  target="_blank"
                  class="text-teal-700 transition hover:text-teal-700/75"
                >
                  <span class="sr-only">Whatsapp</span>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="icon icon-tabler icon-tabler-brand-whatsapp"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                    stroke="#000000"
                    fill="none"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9"></path>
                    <path
                      d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1"
                    ></path>
                  </svg>
                </a>
              </li>

              <li>
                <a
                  href="#"
                  rel="noreferrer"
                  target="_blank"
                  class="text-black transition"
                >
                  <span class="sr-only">Instagram</span>
                  <svg
                    class="h-6 w-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"
                      clip-rule="evenodd"></path>
                  </svg>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <!-- fin footer -->
      <a
        href="https://wa.link/t16x1e"
        target="_blank"
        class="fixed bg-green-600 flex items-center justify-center h-14 w-14 hover:shadow-[rgba(0,200,0,1)_0px_0px_8px_0px] transition-all duration-100 bottom-8 right-8 text-white text-3xl rounded-full"
      >
        <i class="fa-brands fa-whatsapp"></i>
      </a>
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>
  </body>
  <style is:global>
    :root {
      font-family: "Montserrat", system-ui, Avenir, Helvetica, Arial, sans-serif;
      line-height: 1.5;
      font-weight: 400;

      font-synthesis: none;
      text-rendering: optimizeLegibility;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      margin: 0;
    }

    .montserrat {
      font-family: "Montserrat", sans-serif;
    }

    .bg-piel {
      background: #f7e9df;
    }
  </style>
</html>
